#!/bin/bash

# Open Apple Music URLs in the PWA.
# Closes existing PWA window first to avoid duplicates.

url="https://${1#music-pwa://}"

pwa_class="chrome-music.apple.com__us_new-Default"
hyprctl dispatch closewindow "class:$pwa_class" &>/dev/null
sleep 0.3

exec /opt/helium-browser-bin/helium --user-data-dir="$HOME/.config/net.imput.helium" --profile-directory=Default --app="$url"
